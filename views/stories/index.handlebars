<h1>STORIES</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{#if user}}
                        {{{editIcon user.id ../user.id id}}}
                    {{/if}}

                </div>
                <div class="card-content center-align">
                    <div class="story-title">
                        <h5>{{truncate title 25}}</h5>
                    </div>
                    <p class="story-text">{{truncate (stripTags body) 100}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}">
                        {{user.firstName}} {{user.lastName}}
                    </div>

                </div>
                <div class="card-action center-align">
                    <a class="btn grey" href="/stories/show/{{id}}">Read More..</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories</p>
    {{/each}}
</div>