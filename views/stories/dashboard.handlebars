<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}

    <table class="striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each stories}}
            <tr>
                <td><a href="/stories/show/{{id}}">{{title}}</a></td>
                <td>{{formatDate date 'MMMM Do YYYY'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <!--dash-status in public css, to capitalize first letter-->
                <td><a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a></td>
                <td>
                    <form action="/stories/{{id}}?_method=delete" method="post">
                        <button class="btn red" type="submit"><i class="fa fa-remove"></i> Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>


{{else}}
    <p>You dont have any personal Stories</p>
{{/if}}